# ========================================
# CONFIGURACIÓN DE ENTORNO - ms-books-payments
# ========================================

# Base de datos MySQL
DB_HOST=localhost
DB_PORT=3306
DB_NAME=payments_db
DB_USERNAME=root
DB_PASSWORD=12345

# Servidor
SERVER_PORT=8082

# Eureka (Discovery Service)
EUREKA_ENABLED=true
EUREKA_URL=http://localhost:8761/eureka/

# Nombre del servicio de catálogo (sin IP/puerto)
CATALOGUE_SERVICE_NAME=ms-books-catalogue

# JPA/Hibernate
HIBERNATE_DDL_AUTO=update
SHOW_SQL=true

# Logging
LOG_LEVEL=INFO
