							"script": {
								"exec": [
									"// Guardar el ID de la compra creada para usarlo en otros tests",
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    pm.environment.set(\"purchaseId\", jsonData.id);",
									"    console.log(\"Purchase ID guardado: \" + jsonData.id);",
									"}"
